<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vpi.viraj.smartinformer.MainActivity">

    <TextView
        android:text="Turning this on will send a quick message to the most repeatedly missed calls."
        android:layout_width="360dp"
        android:id="@+id/textView"
        android:layout_height="52dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="125dp" />

    <TextView
        android:text="Turning Alarm on will sound the alarm if calls are repeatedly missed."
        android:layout_width="325dp"
        android:layout_height="34dp"
        android:id="@+id/textView2"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="396dp" />

    <TextView
        android:text="@string/message_is_sent_via_sms_so_make_sure_you_have_sufficient_balance_to_send_an_sms"
        android:layout_width="331dp"
        android:layout_height="44dp"
        android:id="@+id/textView3"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="268dp" />

    <TextView
        android:text="Smart Informer let's your caller know that you are busy without even you wanting to take your phone out of your pocket."
        android:layout_width="369dp"
        android:layout_height="49dp"
        android:id="@+id/textView4"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:text="Missed Calls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textAppearance="@android:style/TextAppearance.Material.WindowTitle"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="91dp" />

    <Switch
        android:id="@+id/switchButton"
        android:layout_width="339dp"
        android:layout_height="43dp"
        android:text="Messages"
        android:fontFamily="sans-serif"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="208dp" />

    <Switch
        android:id="@+id/switchButton2"
        android:layout_width="341dp"
        android:layout_height="49dp"
        android:text="@string/alarm"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="339dp" />

</android.support.constraint.ConstraintLayout>
