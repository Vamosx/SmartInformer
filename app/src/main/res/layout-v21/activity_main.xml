<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vpi.viraj.smartinformer.MainActivity">

    <TextView
        android:text="@string/turning_this_on_will_send_a_quick_message_to_the_most_repeatedly_missed_calls"
        android:layout_width="330dp"
        android:id="@+id/textView"
        android:layout_height="65dp"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="@+id/activity_main"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/switchButton"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.22000003" />

    <TextView
        android:text="@string/turning_alarm_on_will_sound_the_alarm_if_calls_are_repeatedly_missed"
        android:layout_width="330dp"
        android:layout_height="48dp"
        android:id="@+id/textView2"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/switchButton2"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="@+id/activity_main"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/activity_main"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:text="@string/message_is_sent_via_sms_so_make_sure_you_have_sufficient_balance_to_send_an_sms"
        android:layout_width="332dp"
        android:layout_height="66dp"
        android:id="@+id/textView3"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/switchButton"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/switchButton2"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.38" />

    <TextView
        android:text="@string/smart_informer_let_s_your_caller_know_that_you_are_busy_without_even_you_wanting_to_take_your_phone_out_of_your_pocket"
        android:layout_width="333dp"
        android:layout_height="69dp"
        android:id="@+id/textView4"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/activity_main"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="@+id/activity_main"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:text="@string/missed_calls"
        android:layout_width="331dp"
        android:layout_height="40dp"
        android:id="@+id/textView7"
        android:textAppearance="@android:style/TextAppearance.Material.Menu"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/activity_main"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="@+id/activity_main"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/switchButton"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.44" />

    <Switch
        android:id="@+id/switchButton"
        android:layout_width="331dp"
        android:layout_height="37dp"
        android:text="@string/messages"
        android:fontFamily="sans-serif"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/activity_main"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/activity_main"
        android:layout_marginBottom="16dp"
        app:layout_constraintHorizontal_bias="0.33"
        app:layout_constraintVertical_bias="0.45" />

    <Switch
        android:id="@+id/switchButton2"
        android:layout_width="330dp"
        android:layout_height="51dp"
        android:text="@string/alarm"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/switchButton"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="@+id/activity_main"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/activity_main"
        android:layout_marginBottom="16dp"
        app:layout_constraintHorizontal_bias="0.54" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="384dp"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintGuide_begin="384dp" />

</android.support.constraint.ConstraintLayout>
